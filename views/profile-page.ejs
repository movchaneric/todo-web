<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="/css/profile.css" rel="stylesheet" media="all">


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <link href="/css/profile.css" rel="stylesheet" media="all">

    <title>Profile page</title>
</head>

<body>
    <div class="page-wrapper bg-gra-01 p-t-130 p-b-100 font-poppins">
        <form action="./update-profile" method="post" enctype="multipart/form-data">
            <div class="card">
                <img src="<%= profileImage %>" alt="404" class="image" style="width: 200px;height: 200px; border-radius: 50%;">
        
                <div style="margin-button: 20px;">
                    <div class="choose-image">
                        <label for="image"></label>
                        <input type="file" name="image" id="image">
                    </div>
                    <div class="p-t-5">
                        <h4 class="label">Number of tasks:</h4>
                        <h5><%= numberOfTasks%></h5>
                    </div>
                </div>
                <br>
                <div class="p-t-15">
                    <h4 class="label">Finished:</h4>
                    <h5><%= numberOfFinishedTasks%></h5>
                </div>
                <div>
                    <div class="p-t-15">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="login-btn btn--radius-2 btn--green" type="submit">Save</button>
                    </div>
        
                    <!-- Reset Password redirect -->
                    <div class="p-t-15" style="display: inline-block;">
                        <div>
                            <a href="./" class="login-btn btn--radius-2 btn--blue">Back</a>
                        </div>
                        <br>
                        <div>
                            <a href="./reset-page" class="login-btn btn--radius-2 btn--red">Forgot password?</a>
                        </div>
                        <br>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>


